<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#171717"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp"
       >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_1" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_margin="20dp"
         >
            <TextView
                android:id="@+id/item_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City Name"
                android:textSize="16dp"
                android:fontFamily="@font/inter"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_bg"
                android:padding="8dp"
                />
          <View 
              android:layout_width="0dp"
              android:layout_weight="1"
               android:layout_height="0dp"/>
            <TextView
                android:id="@+id/item_state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Name"
                android:textSize="16dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/inter"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_bg"
                android:padding="8dp"
                />

      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride Id :"
                android:textSize="20dp"
                android:textColor="#CFCFCF"
                android:fontFamily="@font/inter"/>
            <TextView
                android:id="@+id/item_ride_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="002"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origin Station :"
                android:textSize="20dp"
                android:textColor="#CFCFCF"
                android:fontFamily="@font/inter"/>
            <TextView
                android:id="@+id/item_origin_Station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="station_path :"
                android:textSize="20dp"
                android:textColor="#CFCFCF"
                android:fontFamily="@font/inter"/>
            <TextView
                android:id="@+id/item_station_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="002"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textSize="20dp"
                android:textColor="#CFCFCF"
                android:fontFamily="@font/inter"/>
            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15th Feb"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance :"
                android:textSize="20dp"
                android:textColor="#CFCFCF"
                android:fontFamily="@font/inter"/>
            <TextView
                android:id="@+id/item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>